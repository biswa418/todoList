<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>toDo List</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/home.css">

</head>

<body>
    <div class="container">
        <h1 id="heading">
            <div id="bg"></div>
            <i id="logo-list" class="fa-solid fa-list-check"></i>
            My toDO List
        </h1>
    </div>
    <br>
    <hr>

    <form action="/addTask" method="post">
        <!-- description -->
        <div class="container" style="display: flex; flex-direction: column; justify-content: flex-start;">
            <label for="description">Description</label>
            <textarea name="desc" placeholder="What do you need to do?" required></textarea>
        </div>

        <hr>

        <!-- category section -->
        <div class="container category">
            <div class="dropdown drop">
                <label for="category">Category</label>
                <select class="custom-select" name="category" required>
                    <option selected disabled>Choose your category</option>
                    <option value="Personal">Personal</option>
                    <option value="Work">Work</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="Others">Others</option>
                </select>
            </div>

            <div class="due-date">
                <label for="due">Due Date</label>
                <input type="date" id="due" name="due" required>
            </div>
        </div>

        <hr>

        <!-- add task -->
        <div class="buttons">
            <button class="btn btn-secondary buttons_cmn" type="submit">
                <i class="fa-solid fa-plus"></i>
                Add Task
            </button>
    </form>

    <!-- deleting the form -->
    <form action="/delete" method="post">
        <button class="btn btn-danger buttons_cmn" type="submit" name="" value="">
            <i class="fa-solid fa-trash-can"></i>
            Delete Task
        </button>
        </div>

        <hr>

        <div id="taskContainer">
            <ul>
                <% let j=0; %>
                    <% for(let i of tasks){ %>

                        <li class="tasks">
                            <div>
                                <input type="checkbox" name="<%= j %>" value="<%= i._id %>">
                                <div class="details">

                                    <h4>
                                        <%= i.description %>
                                    </h4>

                                    <p class="dates">
                                        <i class="fa-regular fa-calendar-days"></i>
                                        <%= i.due_date %>
                                    </p>
                                </div>
                            </div>

                            <div class="catCard <%= i.category %>">
                                <%= i.category %>
                            </div>

                        </li>

                        <% j++; %>

                            <% } %>
            </ul>
        </div>
    </form>


    <!-- bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <!-- font awesome -->
    <script src="https://kit.fontawesome.com/7fa3a78bc5.js" crossorigin="anonymous"></script>

</body>

</html>