<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>toDo List</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/home.css">

</head>

<body>
    <div class="container">
        <h1 id="heading">
            <div id="bg"></div>
            <i id="logo-list" class="fa-solid fa-list-check"></i>
            My toDO List
        </h1>
    </div>
    <br>
    <hr>

    <form action="/" method="post">
        <div class="container" style="display: flex; flex-direction: column; justify-content: flex-start;">
            <label for="description">Description</label>
            <textarea name="desc" placeholder="What do you need to do?" required></textarea>
        </div>

        <hr>

        <div class="container category">
            <div class="dropdown drop">
                <label for="category">Category</label>
                <select class="custom-select" required>
                    <option selected disabled>Choose your category</option>
                    <option value="1">Personal</option>
                    <option value="2">Work</option>
                    <option value="3">Cleaning</option>
                    <option value="4">Others</option>
                </select>
            </div>

            <div class="due-date">
                <label for="due">Due Date</label>
                <input type="date" id="due" name="due">
            </div>
        </div>

        <hr>

        <div class="buttons">
            <button class="btn btn-secondary" type="submit" name="add">
                <i class="fa-solid fa-plus"></i>
                Add Task
            </button>

            <a href="/delete/?id">
                <button class="btn btn-danger" type="submit" name="delete">
                    <i class="fa-solid fa-trash-can"></i>
                    Delete Task
                </button>
            </a>
        </div>
    </form>

    <hr>

    <div id="taskContainer">
        <ul>
            <% for(let i of tasks){ %>

                <li class="contacts">
                    <div class="details">
                        <p>
                            <%= i.description %>
                        </p>

                        <p>
                            <%= i.due_date %>
                        </p>

                        <p>
                            <%= i.category %>
                        </p>
                    </div>


                </li>

                <% } %>
        </ul>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/7fa3a78bc5.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="./js/home.js"></script>

</body>

</html>